{
    "name": "itk-dev/kunstdatabasen",
    "description": "Archive of artworks",
    "license": "proprietary",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/doctrine-bundle": "^2.10",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.15",
        "itk-dev/web-accessibility-statement-bundle": "^2.0",
        "knplabs/knp-paginator-bundle": "^6.2",
        "liip/imagine-bundle": "^2.12",
        "ocramius/doctrine-batch-utils": "^2.5",
        "openspout/openspout": "^4.15",
        "phpdocumentor/reflection-docblock": "^5.3",
        "phpoffice/phpspreadsheet": "^1.29",
        "phpstan/phpdoc-parser": "^1.23",
        "stof/doctrine-extensions-bundle": "^1.8",
        "symfony/console": "~7.2.0",
        "symfony/dotenv": "~7.2.0",
        "symfony/flex": "^2",
        "symfony/form": "~7.2.0",
        "symfony/framework-bundle": "~7.2.0",
        "symfony/property-access": "~7.2.0",
        "symfony/property-info": "~7.2.0",
        "symfony/runtime": "~7.2.0",
        "symfony/security-bundle": "~7.2.0",
        "symfony/serializer": "~7.2.0",
        "symfony/twig-bundle": "~7.2.0",
        "symfony/validator": "~7.2.0",
        "symfony/webpack-encore-bundle": "^2.1",
        "symfony/yaml": "~7.2.0",
        "twig/extra-bundle": "^2.12 || ^3.0",
        "twig/twig": "^2.12 || ^3.0",
        "vich/uploader-bundle": "^2.1"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47",
        "friendsofphp/php-cs-fixer": "^3.22",
        "hautelook/alice-bundle": "^2.12",
        "rector/rector": "^0.18.12",
        "symfony/maker-bundle": "^1.51",
        "symfony/web-profiler-bundle": "~7.2.0",
        "vincentlanglet/twig-cs-fixer": "^3.8"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "ergebnis/composer-normalize": true,
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.2.*"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "actions/phpcsfixer": [
            "php-cs-fixer fix --dry-run --diff"
        ],
        "actions/twigcs": [
            "twigcs templates"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "coding-standards-apply": [
            "@coding-standards-apply/php-cs-fixer"
        ],
        "coding-standards-apply/php-cs-fixer": [
            "php-cs-fixer fix"
        ],
        "coding-standards-check": [
            "@coding-standards-check/php-cs-fixer",
            "@coding-standards-check/twigcs"
        ],
        "coding-standards-check/php-cs-fixer": [
            "php-cs-fixer fix --dry-run --format=checkstyle"
        ],
        "coding-standards-check/twigcs": [
            "twigcs templates"
        ]
    }
}

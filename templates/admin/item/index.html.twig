{% extends 'admin/base.html.twig' %}

{% block title %}{{ headline|trans }}{% endblock %}

{% block content %}
    <div class="row mt-3">
        <div class="col">
            <h1 class="h4">{{ headline|trans }}</h1>
        </div>
        <div class="col-auto">
            <a class="btn btn-sm btn-outline-primary float-right" href="{{ path('item_new', {type: 'artwork'}) }}" role="button"><i class="fas fa-plus-circle mr-1"></i>{{ 'admin.index.new'|trans }}</a>
        </div>
        <div class="col-12">
            {% include "admin/item/_filters.html.twig" %}
        </div>
    </div>
    {% include "admin/_table.html.twig" with { header: true, items: items } %}
    {% include "admin/item/_modal.html.twig" %}
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('admin/show') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('admin/show') }}
{% endblock %}

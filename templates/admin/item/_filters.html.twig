{{ form_start(form) }}
<div class="row" id="filters">
    <div class="col-md-4">
        {{ form_row(form.search) }}
    </div>
    <div class="col-md-3">
        {{ form_row(form.type) }}
    </div>
    <div class="col-md-3">
        {{ form_row(form.building) }}
    </div>
    <div class="col-md-2 pt-md-2 order-last order-md-1">
        <div class="d-grid">
            <button type="submit" class="btn btn-primary mt-md-4 mb-3 mb-md-0">{{ 'search.submit'|trans }}</button>
        </div>
    </div>
    <div class="col-12 order-md-2{% if itemType != 'artwork' %} d-none{% endif %}">
        <div class="collapse{% if display_advanced_filters %} show{% endif %}" id="filtersAdvanced">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_row(form.width) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_row(form.height) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="filtersYear">{{ 'filters.year'|trans }}</label>
                        <div class="row">
                            <div class="col">
                                {{ form_row(form.yearFrom) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.yearTo) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_row(form.status) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_row(form.artistGender) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="filtersPrice">{{ 'filters.price'|trans }}</label>
                        <div class="row">
                            <div class="col">
                                {{ form_row(form.priceFrom) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.priceTo) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-grid col-4 mx-auto">
            <button class="btn btn-sm btn-outline-dark mb-3 btn-outline-dark" type="button" data-bs-toggle="collapse" data-bs-target="#filtersAdvanced" aria-expanded="{{ display_advanced_filters ? 'true' : 'false' }}" aria-controls="contentId">
                <span>{{ 'filters.show_advanced'|trans }}</span>
                <span class="true">{{ 'filters.hide_advanced'|trans }}</span>
            </button>
        </div>
    </div>
</div>

{{ form_rest(form) }}

{{ form_end(form) }}

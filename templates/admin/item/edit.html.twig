{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin.item.edit'|trans }}{% endblock %}

{% block body %}
    <div class="container-fluid bg-light">
        <div class="row">
            <div class="col">
                {% block content %}
                    <div class="container">
                        <div class="row">
                            <div class="col mb-3">
                                <h1 class="h4">{{ 'action.edit_item'|trans }}</h1>
                                {{ include('admin/item/_form.html.twig', {'button_label': 'Update'}) }}

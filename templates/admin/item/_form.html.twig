{{ form_start(form) }}
    <div class="row mt-5">
        <div class="col-md-12 mb-3">
            <h2 class="h5">{{ 'item.form.common'|trans }}</h2>
        </div>
        <div class="col-md-4">
            {{ form_row(form.type) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.organization) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.status) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.name) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.description) }}
        </div>
    </div>
    {% if itemType == 'artwork' %}
    <div class="row mt-5">
        <div class="col-md-12 mb-3">
            <h2 class="h5">{{ 'item.form.art'|trans }}</h2>
        </div>
        <div class="col-md-4">
            {{ form_row(form.artist) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.artSerial) }}
        </div>
        <div class="col-6 col-md-4">
            {{ form_row(form.purchasePrice) }}
        </div>
        <div class="col-6 col-md-4">
            {{ form_row(form.productionYear) }}
        </div>
        <div class="col-8 col-md-4">
            {{ form_row(form.assessmentDate) }}
        </div>
        <div class="col-4 col-md-4">
            {{ form_row(form.assessmentPrice) }}
        </div>
    </div>
    {% endif %}
    <div class="row mt-5">
        <div class="col-md-12 mb-3">
            <h2 class="h5">{{ 'item.form.placement'|trans }}</h2>
        </div>
        <div class="col-md-4">
            {{ form_row(form.location) }}
        </div>
        <div class="col-8 col-md-4">
            {{ form_row(form.building) }}
        </div>
        <div class="col-4 col-md-4">
            {{ form_row(form.room) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.address) }}
        </div>
        <div class="col-4 col-md-2">
            {{ form_row(form.postalCode) }}
        </div>
        <div class="col-8 col-md-4">
            {{ form_row(form.city) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.publiclyAccessible) }}
        </div>
    </div>
    {% if itemType == 'artwork' %}
    <div class="row mt-5">
        <div class="col-md-12 mb-3">
            <h2 class="h5">{{ 'item.form.attributes'|trans }}</h2>
        </div>
        <div class="col-md-2">
            {{ form_row(form.width) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.height) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.depth) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.diameter) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.weight) }}
        </div>
    </div>
    {% endif %}
    <div class="row mt-5">
        <div class="col-md-12 mb-3">
            <h2 class="h5">{{ 'item.form.images'|trans }}</h2>
        </div>
        <div class="col-md-12">
            <ul class="images list-unstyled" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}">
                {% for image in form.images %}
                    <li class="media">{{ form_row(image) }}</li>
                {% endfor %}
             </ul>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-12 mb-3">
            <h2 class="h5">{{ 'item.form.extra'|trans }}</h2>
        </div>
        <div class="col-md-12">
            {{ form_row(form.geo) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.comment) }}
        </div>
        <div class="col-md-12">
            {{ form_rest(form) }}
        </div>
    </div>
    <nav class="navbar navbar-expand-sm fixed-top navbar-light bg-white shadow-sm">
        <a class="text-small" href="{{ indexLink }}"><i class="fas fa-arrow-left mr-1"></i>{{ 'item.form.list'|trans }}</a>
        <div class="ml-auto">
            <button class="btn btn-primary px-5">{{ button_label|default('Save') }}</button>
        </div>
    </nav>
{{ form_end(form) }}

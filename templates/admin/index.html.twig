{% extends "admin/base.html.twig" %}

{% block title %}{{ 'admin.index'|trans }}{% endblock %}

{% block content %}
    <h1 class="h4 mt-3 mb-4">{{ 'admin.welcome'|trans }}</h1>
    <p class="text-muted">{{ 'admin.index.latest_viewed'|trans }}</p>

    {% include "admin/_table.html.twig" with { header: false, items: latestVisited } %}

    <p class="text-muted">{{ 'admin.index.latest_added'|trans }}</p>

    {% include "admin/_table.html.twig" with { header: false, items: latestAdded } %}

    <div class="row mt-5">
        <div class="col">
            <a class="btn btn-primary mr-3" href="{{ path('item_new', {itemType: 'artwork'}) }}" role="button">{{ 'admin.index.new_artwork'|trans }}</a>
            <a class="btn btn-primary mr-3" href="{{ path('item_new', {itemType: 'furniture'}) }}" role="button">{{ 'admin.index.new_furniture'|trans }}</a>
        </div>
    </div>
    <div class="row my-5">
        <div class="col">
            <p class="text-muted">HjÃ¦lp og vejledning</p>
            <ul class="nav">
                <li class="nav-item">

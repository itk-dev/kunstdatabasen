                </li>
                <li class="nav-item">
                    <a href="https://github.com/aakb/kunstdatabasen" class="nav-link">https://github.com/aakb/kunstdatabasen</a>
                </li>
            </ul>
        </div>
    </div>

    {% include 'admin/item/_modal.html.twig' %}
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('admin') }}
    {{ encore_entry_script_tags('admin/index') }}
{% endblock %}
